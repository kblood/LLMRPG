{
  "appId": "com.ollama-rpg.app",
  "productName": "Ollama RPG",
  "directories": {
    "output": "dist",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "category": "public.app-category.games"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Game"
  }
}
