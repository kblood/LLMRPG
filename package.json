{
  "name": "ollama-rpg",
  "version": "1.0.0",
  "description": "An RPG game built with Electron, Phaser, and React",
  "type": "module",
  "main": "electron/main.js",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.6.2",
    "electron": "^39.2.1",
    "pako": "^2.1.0",
    "pathfinding": "^0.4.18",
    "phaser": "^3.55.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "electron-builder": "^24.6.4",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "test": "vitest",
    "test:character": "node test-character.js",
    "test:llm": "node test-llm.js",
    "test:dialogue": "node test-dialogue-system.js",
    "test:real": "node test-real-dialogue.js",
    "test:gm": "node test-game-master.js",
    "play": "node play.js",
    "play:gm": "node play-with-gm.js",
    "play:gen": "node play-generated-world.js",
    "package": "electron-builder",
    "test:quest": "node test-quest-system.js",
    "test:combat": "node test-combat.js",
    "test:worldgen": "node test-world-generation.js",
    "test:commands": "node test-contextual-commands.js",
    "test:phase1c": "node test-phase-1c.js",
    "test:e2e": "node test-end-to-end.js",
    "test:gossip": "node test-gossip-network.js",
    "test:fallback": "node test-fallback-logging.js",
    "replay:list": "node view-replay.js",
    "replay:view": "node view-replay.js",
    "replay:play": "node play-replay.js",
    "replay:auto": "node auto-replay.js"
  },
  "build": {
    "appId": "com.ollamarpg.app",
    "productName": "OllamaRPG",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "electron/**/*",
      "ui/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
